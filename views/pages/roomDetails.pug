              i.fas.fa-broom
              .room-details-container__left__amenities__columns__column__row__text Cleaning
            .room-details-container__left__amenities__columns__column__row
              i.fas.fa-shopping-bag
              .room-details-container__left__amenities__columns__column__row__text Grocery
            .room-details-container__left__amenities__columns__column__row
              i.fas.fa-shopping-cart
              .room-details-container__left__amenities__columns__column__row__text Shop Near
          .room-details-container__left__amenities__columns__column
            .room-details-container__left__amenities__columns__column__row
              i.fas.fa-wifi
              .room-details-container__left__amenities__columns__column__row__text High Speed Wifi
            .room-details-container__left__amenities__columns__column__row
              i.fas.fa-hamburger
              .room-details-container__left__amenities__columns__column__row__text Kitchen
            .room-details-container__left__amenities__columns__column__row
              i.fas.fa-shower
              .room-details-container__left__amenities__columns__column__row__text Shower
