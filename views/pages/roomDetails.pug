              i.fas.fa-bed
              .room-details-container__left__amenities__columns__column__row__text Single Bed
            .room-details-container__left__amenities__columns__column__row
              i.fas.fa-recycle
              .room-details-container__left__amenities__columns__column__row__text Towels
          .room-details-container__left__amenities__columns__column
            .room-details-container__left__amenities__columns__column__row
              i.fas.fa-lock
              .room-details-container__left__amenities__columns__column__row__text Strong Locker
            .room-details-container__left__amenities__columns__column__row
              i.fas.fa-shield-alt
              .room-details-container__left__amenities__columns__column__row__text Smart Security
            .room-details-container__left__amenities__columns__column__row
              i.fas.fa-question
              .room-details-container__left__amenities__columns__column__row__text 24/7 Online Support
